<% layout('layouts/booil') %>

<style>
    .card{
        background-color: #dee2e6;
        border-radius: 0.75rem;

    }
    .form-control{
        background-color: #f0f2f5;
    }
</style>
   

<div class="row">
    <div class="col-md-6 offset-md-3 mb-3">
        <div class="card shadow">
            <div class="card-body">
                <h1 class=" mark text-center text-muted ">Edit Station</h1>

                <form action="/station/<%= oldStat._id %>?_method=PUT " method="POST" class="validated-form" novalidate  
                    enctype="multipart/form-data">
        
                    <div class="mb-3">
                        <label for="title" class="form-label"   >Title</label>
                        <input type="text" class="form-control" id="title" placeholder="enter the title" name="title"  value="<%= oldStat.title %> " required>
                   
                         <div class="valid-feedback">
                            looks good
                        </div>
                    </div>
                    <div  class="mb-3">
                        <label class="form-label"   for="location">Location</label>
                        <input  class="form-control"type="text" id="location" placeholder="enter the location" name="location"  required value="<%= oldStat.location %> ">
        
                    </div>
        
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Add Images</label>
                        <input class="form-control" type="file" name="image" id="formFile" multiple>
                    </div>
            
                    
        
                    <div class="mb-3">
                        <label class="form-label" for="price"> Price</label>
                        <div class="input-group ">
                            <span class="input-group-text">Rs</span>
                            <input class="form-control" type="text" id="price" placeholder="0.00" aria-label="price" name="price" required value="<%= oldStat.price %> ">
                   
                        </div> 
                   
                         <div class="valid-feedback">
                            looks good
                        </div>
                    </div>
        
                    <div  class="mb-3">
                        <label class="form-label"   for="description">Description</label>
                        <textarea  class="form-control" type="text" id="description" placeholder="enter the description"  required name="description" value="<%= oldStat.description %> "></textarea>
                    
                         <div class="valid-feedback">
                            looks good
                        </div>
                    </div>
                    <div class="mb-3">
                       <% oldStat.Images.forEach(function(img, i ) { %> 
                            <img src="<%= img.thumbnail%> " alt="" class="img-thumbnail">
        
                            <div class="form-check-inline ">
                                <input class="form-check-input" type="checkbox" id="<%= i %>" name="deleteImages[]" value="<%= img.filename%> ">
                                <label class="form-check-label" for="<%= i %>">Delete</label>
                            </div>
        
                     <% }) %> 
        
                     
                    </div>
            
                      <button class="btn btn-success">Update Station</button>
                </form>
            </div>
        </div>
        
    </div>
        
</div>


       


